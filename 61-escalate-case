public void escalateIfMeetsCriteria(Case c) {
    //code here

    Case c = new Case();
    c.Type = 'Mechanical';
    c.Type = 'Electrical';
    c.Reason = 'Breakdown';
    c.Status = 'In Progress';
    escalateIfMeetsCriteria(c);
    if((c.Type == 'Mechanical' || c.Type == 'Electrical') && (c.Reason = 'Breakdown' && c.Status = 'In Progress')){
        c.IsEscalated = true;
    }

}